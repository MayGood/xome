<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/mainBottomBackground" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGray" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/s_main_bottom_home" />
            <FrameLayout
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true">
                <com.xxhx.xome.view.BadgeView
                    android:id="@+id/badge_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:text="77"
                    android:visibility="gone"/>
            </FrameLayout>
            <View
                android:id="@+id/indicator_home"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:background="@color/home"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/btn_mess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/s_main_bottom_mess" />
            <FrameLayout
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true">
                <com.xxhx.xome.view.BadgeView
                    android:id="@+id/badge_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:text="1"
                    android:visibility="gone"/>
            </FrameLayout>
            <View
                android:id="@+id/indicator_mess"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:background="@color/mess"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/s_main_bottom_add" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/btn_disc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/s_main_bottom_disc" />
            <FrameLayout
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true">
                <com.xxhx.xome.view.BadgeView
                    android:id="@+id/badge_disc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:text="14"
                    android:visibility="gone"/>
            </FrameLayout>
            <View
                android:id="@+id/indicator_disc"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:background="@color/disc"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/btn_prof"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/s_main_bottom_prof" />
            <FrameLayout
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true">
                <com.xxhx.xome.view.BadgeView
                    android:id="@+id/badge_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:text="@string/badge_more"
                    android:visibility="gone"/>
            </FrameLayout>
            <View
                android:id="@+id/indicator_prof"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:background="@color/prof"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
