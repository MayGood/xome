<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:paddingLeft="22dp"
    android:paddingTop="20dp"
    android:paddingRight="22dp"
    android:paddingBottom="28dp"
    android:background="@drawable/comment_sequence_bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_stepcount"
            android:drawablePadding="8dp"
            android:text="步频"
            android:textSize="12sp"
            android:textColor="#584f60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="(步/分钟)"
            android:textSize="10sp"
            android:textColor="#999999"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="平均步频"
            android:textSize="12sp"
            android:textColor="#999999"/>
        <com.xxhx.exercise.view.KeepTextView
            android:id="@+id/average_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="137"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#24c789"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/step_chart"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>
</LinearLayout>